generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(cuid())
  email      String  @unique
  name       String
  surname    String
  password   String
  avatarPath String? @map("avatar_path")

  verificationToken String? @default(cuid()) @map("verification_token")

  rights Role @default(USER)
}

enum Role {
  USER
  ADMIN
}
